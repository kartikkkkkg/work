// src/App.js

import React, { useState, useEffect } from 'react';
import { BrowserRouter as Router, Routes, Route, Link } from 'react-router-dom';
import axios from 'axios';
import 'bootstrap/dist/css/bootstrap.min.css'; // This line imports Bootstrap CSS

// A component for the Home page
const HomePage = () => <h2>Home Page</h2>;

// A component for a basic data fetch
const DataComponent = () => {
  const [data, setData] = useState([]);

  useEffect(() => {
    // Axios call to fetch data from an API
    axios.get('https://jsonplaceholder.typicode.com/posts')
      .then(response => {
        setData(response.data);
      })
      .catch(error => {
        console.error('There was an error!', error);
      });
  }, []);

  return (
    <div>
      <h3>Fetched Data</h3>
      <ul className="list-group"> {/* Bootstrap list group */}
        {data.slice(0, 5).map(item => (
          <li key={item.id} className="list-group-item">
            {item.title}
          </li>
        ))}
      </ul>
    </div>
  );
};

function App() {
  return (
    <Router>
      <div className="container mt-4"> {/* Bootstrap container for centering */}
        <nav className="navbar navbar-expand-lg navbar-light bg-light">
          <ul className="navbar-nav">
            <li className="nav-item">
              <Link to="/" className="nav-link">Home</Link>
            </li>
            <li className="nav-item">
              <Link to="/data" className="nav-link">Data</Link>
            </li>
          </ul>
        </nav>

        <hr />

        <Routes>
          <Route path="/" element={<HomePage />} />
          <Route path="/data" element={<DataComponent />} />
        </Routes>
      </div>
    </Router>
  );
}

export default App;
