import CustomersPage from './pages/CustomersPage';
import AboutPage from './pages/AboutPage';
import CustomerDetailsPage from './pages/CustomerDetailsPage';
import CustomerFormPage from './pages/CustomerFormPage';

import './App.css';

function App() {
  const [customers, setCustomers] = useState([]);

  // Functions to handle CRUD operations on the 'customers' state will go here
  const handleAddCustomer = (newCustomer) => { /* ... */ };
  const handleEditCustomer = (updatedCustomer) => { /* ... */ };
  const handleDeleteCustomer = (customerId) => { /* ... */ };

  return (
    <Router>
      <div className="App">
        <NavBar />
        <div className="main-content">
          <Routes>
            <Route path="/" element={<HomePage />} />
            <Route path="/customers" element={
              <CustomersPage customers={customers} onDelete={handleDeleteCustomer} />
            } />
            <Route path="/about" element={<AboutPage />} />
            <Route path="/customers/:id" element={<CustomerDetailsPage customers={customers} />} />
