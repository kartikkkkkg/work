package multipleof5Check.controller;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/api/check/{number}")
@CrossOrigin(origins = "http://localhost:3000") 
public class multiple {

    @GetMapping
    public ResponseEntity<String> isMultipleOfFive(@PathVariable int number) {
        if (number % 5 == 0) {
            return ResponseEntity.ok("yes " + number + " is a multiple of 5");
        } else {
            return ResponseEntity.ok("no " + number + " is not a multiple of 5");
        }
    }
}
---------------

import axios from 'axios';

const API_URL = "http://localhost:8080/api/check/";

export const checkMultipleOfFive = (number) => {
    return axios.get(API_URL + number);
};

--------------


import React, { useState } from 'react';
import { checkMultipleOfFive } from '../services/multipleOfFiveService';

const MultipleofFiveChecker = () => {
    const [number, setNumber] = useState('');
    const [result, setResult] = useState('');

    const handleCheck = async () => {
        try {
            const response = await checkMultipleOfFive(number);
            setResult(response.data);
        } catch (error) {
            console.error("Error during API call:", error);
            setResult("Error");
        }
    };

    return (
        <div>
            <h1>Multiple of Five Checker</h1>
            <div>
                <input
                    type="number"
                    value={number}
                    onChange={(e) => setNumber(e.target.value)}
                    placeholder="Enter a Number"
                />
                <button onClick={handleCheck}>Check</button>
            </div>
            {result && <h2>Result: {result}</h2>}
        </div>
    );
};

export default MultipleofFiveChecker;

